{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "node/no-missing-import": "off", // Required for ES modules
    "node/no-unsupported-features/es-syntax": "off" // Allows ES module syntax
  },
  "globals": {
    "process": "readonly"
  }
}